<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:contentDescription="@string/description_menu_item"
        android:id="@+id/iconIv"
        android:duplicateParentState="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/newUpdateTv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/updates_icon_height"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/updates_background"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:minWidth="@dimen/updates_icon_width"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/labelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:layout_toLeftOf="@id/newUpdateTv"
        android:layout_marginLeft="72dp"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/horizontal_margin"
        android:textColor="@color/text_stateful"
        android:textSize="@dimen/text_normal" />
</merge>