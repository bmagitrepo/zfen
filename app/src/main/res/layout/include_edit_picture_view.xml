<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/fragment_settings"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@string/description_person_image"
        android:id="@+id/avatarIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/button_height"
        android:scaleType="centerCrop"
        android:src="@drawable/settings_me" />

    <TextView
        android:id="@+id/edit_picture_text"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-10dp"
        android:background="@drawable/change_photo_bg"
        android:gravity="center"
        android:text="@string/edit_photo"
        android:textColor="@color/white"
        android:textSize="12sp" />
</LinearLayout>