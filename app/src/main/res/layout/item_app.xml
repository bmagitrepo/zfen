<?xml version="1.0" encoding="utf-8"?>
<com.zoomlee.zoo.ui.view.AppItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:contentDescription="@string/description_app_icon"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/text_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/text_4d"
        android:textSize="@dimen/text_large" />
</com.zoomlee.zoo.ui.view.AppItemView>