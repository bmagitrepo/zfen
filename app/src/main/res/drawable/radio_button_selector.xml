<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:left="@dimen/radio_btn_padding" android:top="@dimen/radio_btn_padding">
                <shape android:shape="oval">
                    <solid android:color="@color/unchecked_rb" />
                    <size android:width="@dimen/radio_btn_size" android:height="@dimen/radio_btn_size" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:left="@dimen/radio_btn_padding" android:top="@dimen/radio_btn_padding">
                <shape android:shape="oval">
                    <solid android:color="@color/green_zoomlee" />
                    <size android:width="@dimen/radio_btn_size" android:height="@dimen/radio_btn_size" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

